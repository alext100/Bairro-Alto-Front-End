{
  "fps_limit": 100,
  "background": {
    "color": {
      "value": "#fff"
    },
    "repeat": "no-repeat",
    "size": "cover",
    "opacity": 1
  },
  "fullScreen": {
    "enable": false,
    "zIndex": -1
  },
  "interactivity": {
    "detect_on": "canvas",
    "events": {
      "onDiv": [
        {
          "enable": false,
          "selectors": ".main-page__features",
          "mode": "bounce",
          "type": "rectangle"
        }
      ],
      "onclick": { "enable": true, "mode": "push" },
      "onhover": {
        "enable": false,
        "mode": "repulse",
        "parallax": { "enable": false, "force": 60, "smooth": 10 }
      },
      "resize": true
    },
    "modes": {
      "bubble": {
        "distance": 400,
        "duration": 2,
        "opacity": 0.8,
        "size": 40,
        "speed": 2
      },

      "grab": { "distance": 400, "line_linked": { "opacity": 1 } },
      "push": {
        "particles_nb": 4,
        "default": true,
        "groups": [],
        "quantity": 4
      },
      "remove": { "particles_nb": 2 },
      "repulse": { "distance": 200, "duration": 0.4 }
    }
  },

  "particles": {
    "color": {
      "value": "random"
    },
    "rotate": {
      "value": 7,
      "random": true
    },
    "line_linked": {
      "color": "#111",
      "distance": 150,
      "enable": true,
      "opacity": 0.8,
      "width": 1
    },
    "move": {
      "attract": { "enable": false, "rotateX": 600, "rotateY": 1200 },
      "bounce": false,
      "direction": "none",
      "enable": true,
      "random": true,
      "speed": 2,
      "straight": false,
      "outMode": "bounce"
    },
    "number": {
      "density": { "enable": true, "area": 700, "factor": 1000 },
      "limit": 30,
      "value": 20
    },
    "opacity": {
      "anim": {
        "enable": true,
        "opacity_min": 0.7,
        "speed": 1,
        "sync": false
      },
      "random": false,
      "value": 1
    },
    "shape": {
      "character": {
        "fill": true,
        "font": "Noto Sans, Arial, sans-serif",
        "style": "",
        "value": [
          "Que horas são?",
          "São 7 horas da manhã",
          "Quantos anos é que o João tem?",
          "Ele tem 45 anos.",
          "Como é que tu te chamas?",
          "Eu chamo-me Joana",
          "Qual é a sua profissão?",
          "Eu sou estudante.",
          "Onde é que ele mora?",
          "Ele mora em Lisboa."
        ],
        "weight": "400"
      },
      "polygon": { "nb_sides": 5 },
      "stroke": { "color": "#000", "width": 1 },
      "type": "char"
    },
    "size": {
      "random": {
        "enable": true,
        "minimumValue": 8
      },
      "value": {
        "min": 10,
        "max": 18
      }
    }
  },
  "polygon": {
    "draw": { "enable": false, "lineColor": "#333", "lineWidth": 0.5 },
    "move": { "radius": 10 },
    "scale": 1,
    "type": "none",
    "url": ""
  },
  "retina_detect": true
}
